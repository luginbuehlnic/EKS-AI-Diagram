<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
>
    <Table
        id="alertsTable"
        mode="MultiSelect"
        items="{/Alerts}"
        width="auto"
        growing="true"
        growingScrollToLoad="true"
        selectionChange="onSelectionChange"
    >
        <columns>
            <Column id="headerId"
                demandPopin="true"
                minScreenWidth="Tablet"
                vAlign="Middle">
                <Text text="ID"/>
            </Column>
            <Column id="headerTextId"
                demandPopin="true"
                minScreenWidth="Tablet"
                vAlign="Middle">
                <Text text="Text"/>
            </Column>
            <Column id="headerLocationId"
                demandPopin="true"
                minScreenWidth="Tablet"
                vAlign="Middle">
                <Text text="Location"/>
            </Column>
            <Column id="headerTypeId"
                demandPopin="true"
                minScreenWidth="Tablet"
                vAlign="Middle">
                <Text text="Type"/>
            </Column>
            <Column id="headerTimeId"
                demandPopin="true"
                vAlign="Middle"
                minScreenWidth="Tablet">
                <Text text="Time"/>
            </Column>
        </columns>

        <items id="{id}">
            <ColumnListItem
                type="Navigation"
                press=".onPress"
            >
                <cells>
                    <ObjectIdentifier
                        title="{id}"/>
                    <Text text="{text}"/>
                    <Text text="{tooltip}"/>
                    <ObjectStatus text="{type}" state="{state}"/>
                    <ObjectNumber number="{time}"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</c:FragmentDefinition>