<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
>
	<HBox>
		<VBox
			class="sapUiSmallMargin"
		>
			<HBox
			>
				<Title text="Edit Mode:" class="sapUiTinyMargin"/>
				<Switch
					customTextOff="OFF"
					customTextOn="ON"
					name="edit"
					state="false">
				</Switch>
			</HBox>
			<HBox
			>
				<Title text="Darkmode:" class="sapUiTinyMargin"/>
				<Switch
					customTextOff="OFF"
					customTextOn="ON"
					name="darkmode"
					state="false">
				</Switch>
			</HBox>
			<HBox
			>
				<Title text="Authorized:" class="sapUiTinyMargin"/>
				<Switch type="AcceptReject"
					name="darkmode"
					state="true"
					enabled="false">
				</Switch>
			</HBox>	
		</VBox>
		<VBox
			class="sapUiSmallMarginTop sapUiLargeMarginBegin"
		>
			<ActionSelect
			>
				<items>
					<c:Item text="Theme1"/>
					<c:Item text="Theme2"/>
				</items>
			</ActionSelect>
		</VBox>
	</HBox>
</c:FragmentDefinition>