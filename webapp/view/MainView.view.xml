<mvc:View
    controllerName="ch.nic.mapsample.controller.MainView"
	xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.m.semantic"
	xmlns:tnt="sap.tnt"
    height="100%"
>
	<semantic:FullscreenPage id="idMainView">
		<tnt:ToolHeader
		>
			<Button icon="sap-icon://sap-logo-shape"/>
			<Title text="{i18n>home}" titleStyle="H5"/>
			<ToolbarSpacer/>
			<Button icon="sap-icon://account"/>
		</tnt:ToolHeader>
		<semantic:content>
			<Title text="Start Page" class="sapUiLargeMarginBegin sapUiLargeMarginTop" titleStyle="H3"/>
			<ToolbarSpacer/>
			<GenericTile class="sapUiLargeMarginBegin sapUiSmallMarginTop tileLayout"
                backgroundImage="./Images/sus.jpg" frameType="TwoByOne" press="onTile('main')">
                <TileContent>
                    <NewsContent contentText="Account Monitoring"/>
                </TileContent>
            </GenericTile>
		</semantic:content>
	</semantic:FullscreenPage>
</mvc:View>
