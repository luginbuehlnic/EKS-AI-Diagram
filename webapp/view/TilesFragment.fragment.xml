<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
>
    <Panel>
        <content>
            <ToolbarSpacer/>
            <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                backgroundImage="./Images/globe.jpg" frameType="TwoByOne">
                <TileContent>
                    <NewsContent contentText="Some random News that could be interesting"/>
                </TileContent>
            </GenericTile>
            <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="List" frameType="OneByHalf" press="onLogOns">
                <TileContent unit="last Month">
                    <NumericContent id="idLogOnTile" value="{/amounts}" icon="sap-icon://list" withMargin="false"/>  
                </TileContent>
            </GenericTile>

            <ToolbarSpacer/>
            <GenericTile class="sapUiTinyMarginBegin sapUiLargeMarginTop tileLayout" backgroundImage="./Images/map.jpg"
                appShortcut="Go to" systemInfo="Map" press="onMapTile">
                <TileContent>
                    <NewsContent contentText="Map with login locations"/>  
                </TileContent>
            </GenericTile>
            <GenericTile class="sapUiTinyMarginBegin sapUiLargeMarginTop tileLayout" header="Settings" press="onSettings">
                <TileContent unit="Notifications">
                    <NumericContent id="idSettingTile" icon="sap-icon://settings" value="2" valueColor="Critical" withMargin="false"/>  
                </TileContent>
            </GenericTile>    
        </content>
    </Panel>
</c:FragmentDefinition>