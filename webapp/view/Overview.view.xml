<mvc:View
    controllerName="ch.nic.mapsample.controller.Overview"
	xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.m.semantic"
	xmlns:tnt="sap.tnt"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
    height="100%"
	id="overview"
>
	<semantic:FullscreenPage id="idOverview">
		<tnt:ToolHeader
		>
			<Button icon="sap-icon://nav-back" press="onNavBack"/>
			<Button icon="sap-icon://sap-logo-shape" press="onHome"/>
			<Title text="Home" titleStyle="H5"/>
			<ToolbarSpacer/>
			<Button icon="sap-icon://account"/>
		</tnt:ToolHeader>
		<semantic:content>
			<IconTabBar id="idTabBar" expandable="false" selectedKey="{view>/selectedTabKey}" select="onTabSelect">
				<items>
					<IconTabFilter text="Overview" key="main">
						<Text text="Overview"/>
						<core:Fragment fragmentName="ch.nic.mapsample.view.TilesFragment" type="XML" id="idTileFragment"/>
					</IconTabFilter>
					<IconTabFilter text="Map" key="map" id="mapFilter">
						<l:VerticalLayout>
							<Title text="Map" titleStyle="H4" class="sapUiTinyMarginTop" />
							<Text text="This Map shows locations of the latest Logins" class="sapUiSmallMarginBottom"/>
							<ToolbarSpacer/>
							<l:HorizontalLayout>
								<l:content>
									<l:VerticalLayout>
										<l:content>
											<Text text="Mapstyle: " />
											<SegmentedButton
												selectedKey="analytic"
												id="mapSegment"
												items="{maps>/types}"
												selectionChange="onActionSelect"
												class="sapUiTinyMarginEnd">
												<items>
													<SegmentedButtonItem key="{maps>key}" tooltip="{maps>text}" text="{maps>text}" id="mapSegmentItem" width="100px"/>
												</items>
											</SegmentedButton>
										</l:content>
									</l:VerticalLayout>
									<l:VerticalLayout>
										<l:content>
											<Text text="Clustering:"/>
											<Switch state="false" id="switch" change="onSwitch"/>
										</l:content>
									</l:VerticalLayout>
								</l:content>
							</l:HorizontalLayout>
						</l:VerticalLayout>
						<!-- <core:Fragment fragmentName="ch.nic.mapsample.view.Mapfragment" type="XML" id="idMapFragment"/> -->
					</IconTabFilter>
					<IconTabFilter text="GeoMap" key="geomap">
						<Text text="GeoMap"/>
						<core:Fragment fragmentName="ch.nic.mapsample.view.GeoMap" type="XML" id="geomapFragment"/>
					</IconTabFilter>
					<IconTabFilter text="Settings" key="setting">
						<Text text="Settings"/>
						<core:Fragment fragmentName="ch.nic.mapsample.view.SettingFragment" type="XML" id="idSettingFragment"/>
					</IconTabFilter>
				</items>
			</IconTabBar>
		</semantic:content>
	</semantic:FullscreenPage>
</mvc:View>
