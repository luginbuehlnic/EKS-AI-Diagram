<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:vbm="sap.ui.vbm"
>
	<l:FixFlex class="fixFlexVertical" minFlexSize="50">
		<l:fixContent>
			<Panel>
				<content>
					<!-- <Text text="This Map shows locations of the latest Logins" class="sapUiSmallMarginBottom"/> -->
				</content>
			</Panel>
		</l:fixContent>
		<l:flexContent>
			<VBox  backgroundDesign="Solid"
				>
				<vbm:AnalyticMap id="analyticmap" initialPosition="9;47" regionClick=".onRegionClick" initialZoom="5" width="100%" enableAnimation="true">
					<vbm:vos>
						<vbm:Spots items="{/Spots}" click=".onClickItem">
							<vbm:Spot position="{pos}" tooltip="{tooltip}"
								click=".onClickSpot" type="{type}"/>
						</vbm:Spots>
						<vbm:Routes items="{/GeoRoutes}">
							<vbm:Route position="{route}"
								color="{color}" colorBorder="{colorBorder}" linewidth="{line}"
								routetype="{routetype}" lineDash="{dash}" click=".onClickRoute" contextMenu=".onContextMenuRoute" />
						</vbm:Routes>
					</vbm:vos>
					<vbm:legend>
						<vbm:Legend>
							<vbm:LegendItem text="Warning" semanticSpotType="Warning"/>
							<vbm:LegendItem text="Success" semanticSpotType="Success"/>
							<vbm:LegendItem text="Error" semanticSpotType="Error"/>
							<vbm:LegendItem text="Inactive" semanticSpotType="Inactive"/>
						</vbm:Legend>
					</vbm:legend>
					<!-- <vbm:clusters>
						<vbm:ClusterTree id="clusterTree" areaColor="rgba(255,255,255,0)" areaColorBorder="rgba(255,255,255,0)" click="onCluster">
								<vbm:vizTemplate>
									<vbm:Cluster id="vizTemplate" type="Warning" icon="sap-icon://visits"/>
								</vbm:vizTemplate>
						</vbm:ClusterTree>
					</vbm:clusters> -->
				</vbm:AnalyticMap>
			</VBox>
		</l:flexContent>
	</l:FixFlex>
</c:FragmentDefinition>