<mvc:View
	controllerName="ch.nic.mapsample.controller.LogonView"
	xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:semantic="sap.m.semantic"
	xmlns:tnt="sap.tnt"
    height="100%"
    id="logonView"
>
    <semantic:FullscreenPage id="idLogonView">
        <tnt:ToolHeader
		>
			<Button icon="sap-icon://nav-back" press="onNavBack"/>
			<Button icon="sap-icon://sap-logo-shape" press="onHome"/>
			<Text text="Home"/>
			<ToolbarSpacer/>
			<Button icon="sap-icon://account"/>
		</tnt:ToolHeader>
        <semantic:content>
			<IconTabBar id="idTabBar" expandable="false" selectedKey="{view>/selectedTabKey}">
				<items>
					<IconTabFilter text="Overview" key="tab1">
						<Text text="Overview"/>
						<!-- <core:Fragment fragmentName="ch.nic.mapsample.view.TilesFragment" type="XML" id="idTileFragment"/> -->
					</IconTabFilter>
					<IconTabFilter text="Map" key="tab2">
						<Text text="Map"/>
						<!-- <core:Fragment fragmentName="ch.nic.mapsample.view.Mapfragment" type="XML" id="idMapFragment"/> -->
					</IconTabFilter>
					<IconTabFilter text="Settings" key="tab3">
						<Text text="Settings"/>
						<!-- <core:Fragment fragmentName="ch.nic.mapsample.view.SettingFragment" type="XML" id="idSettingFragment"/> -->
					</IconTabFilter>
				</items>
			</IconTabBar>
		</semantic:content>
    </semantic:FullscreenPage>
</mvc:View>